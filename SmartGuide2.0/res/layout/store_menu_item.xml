<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_store_shop"
    android:orientation="vertical"
    android:padding="8dp" >

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="72dp"
        android:layout_height="72dp" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/ava" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/store_menu_item_border" >
        </FrameLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/imgBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/frameLayout1"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/frameLayout1"
        android:background="@drawable/button_buy_android"
        android:scaleType="center"
        android:src="@drawable/button_muatext_android" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frameLayout1"
        android:layout_below="@+id/frameLayout1"
        android:layout_marginTop="4dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Cà phê Ameriacano"
        android:textColor="#3A3A3A" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txtName"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_toLeftOf="@+id/imgMore"
        android:background="@drawable/bg_price"
        android:gravity="center"
        android:text="95.000 đ"
        android:textColor="#FF3B00"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imgMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_more"
        android:scaleType="center"
        android:src="@drawable/button_moretext" />

</RelativeLayout>