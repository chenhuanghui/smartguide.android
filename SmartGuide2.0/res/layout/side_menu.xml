<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pattern_navigation_repeat" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@drawable/bg_blur_navigation"
            android:gravity="bottom" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/cover_blur" >
            </FrameLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp" >

                <FrameLayout
                    android:id="@+id/frameLayout1"
                    android:layout_width="69dp"
                    android:layout_height="69dp"
                    android:layout_marginLeft="10dp" >

                    <ImageView
                        android:id="@+id/imgAva"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        android:scaleType="centerCrop" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/frame_avauser_navigation" >
                    </FrameLayout>
                </FrameLayout>

                <ImageView
                    android:id="@+id/btnSettings"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:scaleType="center"
                    android:src="@drawable/button_setting_navigation" />

                <TextView
                    android:id="@+id/txtUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imageButton1"
                    android:layout_toRightOf="@+id/frameLayout1"
                    android:text="Nguyễn Ngọc Hùng"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </RelativeLayout>
        </FrameLayout>

        <Button
            android:id="@+id/btnExplore"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/icon_home_navigation"
            android:drawableRight="@drawable/button_arrow_navigation"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="  Khám phá"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_navigation" >
        </FrameLayout>

        <Button
            android:id="@+id/btnPromotion"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/icon_promotion_navigation"
            android:drawableRight="@drawable/button_arrow_navigation"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="  Khuyến mãi"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_navigation" >
        </FrameLayout>

        <Button
            android:id="@+id/btnStore"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/icon_store_navigation"
            android:drawableRight="@drawable/button_arrow_navigation"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="  Cửa hàng"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_navigation" >

        </FrameLayout>

        <Button
            android:id="@+id/btnTutorial"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="#00000000"
            android:drawableLeft="@drawable/icon_tutorial_navigation"
            android:drawableRight="@drawable/button_arrow_navigation"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="  Hướng dẫn"
            android:textColor="#B6B6B6"
            android:textSize="14sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_navigation" >
        </FrameLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:background="@drawable/button_update" />

</FrameLayout>