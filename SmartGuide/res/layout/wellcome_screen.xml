<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wc_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/smartguideF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/smartguide"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/sloganF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/slogan"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/numberField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:textStyle="bold"
        android:textColor="#C95337"
        android:textSize="22dp"
        android:background="@drawable/numberfield"
        android:textAppearance="@android:attr/textAppearanceLarge"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:inputType="phone" 
        android:visibility="invisible">
        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/sendCodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_send"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#CA5436"
        android:text="Nhập số điện thoại..."
        android:visibility="invisible" />
    
</RelativeLayout>
