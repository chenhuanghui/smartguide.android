<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh cửa hàng:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#282E3A"
                android:textSize="11dp"
                android:textStyle="bold" />
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/textView3">

                <vn.smartguide.HorizontalListView
                    android:id="@+id/pagerShopPhoto1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </vn.smartguide.HorizontalListView>

                <Button
                    android:id="@+id/btnPagerPhoto1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />
                
            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp" >

            <TextView
                android:id="@+id/TextView06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hình ảnh khách hàng:"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#282E3A"
                android:textSize="11dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnTakePhoto"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_below="@+id/TextView06"
                android:background="@drawable/picture_add_frame" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_below="@+id/TextView06"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/btnTakePhoto">

                <vn.smartguide.HorizontalListView
                    android:id="@+id/pagerShopPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >
                </vn.smartguide.HorizontalListView>

                <Button
                    android:id="@+id/btnPagerPhoto2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#00000000" />

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
