<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:background="#ffffff">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

        <RelativeLayout
             	android:id="@+id/shop_bar_head_bg"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:background="@drawable/shop_bar_head">

            <TextView
                android:id="@+id/txtSGP"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="05"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </RelativeLayout>

        <LinearLayout
            	android:id="@+id/shop_bar_tail_bg"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/shop_bar_tail_9">

            <TextView
                android:id="@+id/txtAwardName"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1 phần khuyến mãi"
                android:textColor="#ffffff"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>