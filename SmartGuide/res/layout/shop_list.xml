<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="#282e3a" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#282e3a"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout2"
            android:layout_alignParentBottom="false"
            android:background="#282e3a"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/arrow_up" >
            </ImageButton>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6" >

            <GridView
                android:id="@+id/grid_view_shop_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:paddingTop="18dp"
                android:layout_marginRight="10dp"
                android:background="#282e3a"
                android:gravity="center_horizontal|center_vertical"
                android:horizontalSpacing="15dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="1"
                android:overScrollMode="ifContentScrolls"
                android:scrollbarStyle="insideOverlay"
                android:verticalSpacing="5dp" >
            </GridView>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@drawable/blur_top_repeat"
                android:orientation="vertical" >
            </ImageButton>

            <ImageButton
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/blur_bottom_repeat"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/relativeLayout2"
            android:layout_alignParentBottom="false"
            android:background="#282e3a"
            android:orientation="vertical" >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/arrow_down" >
            </ImageButton>
        </LinearLayout>
    </LinearLayout>

    <!--
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="#00000000"
        android:orientation="vertical"
        android:id="@+id/foreground" >    
    </RelativeLayout>
    -->

    <RelativeLayout
        android:id="@+id/foregroundLoading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#282e3a"
        android:orientation="vertical"
        android:visibility="invisible" >

        <ImageView
            android:id="@+id/loadingBackgroundS"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/popup"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/loadingCircleS"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/loading_cirle"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/loadingMidleS"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/load_midpoint"
            android:visibility="invisible" />
    </RelativeLayout>

</RelativeLayout>