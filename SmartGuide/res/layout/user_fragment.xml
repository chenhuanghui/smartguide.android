<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/userLayoutMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#282E3A"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="26dp"
        android:paddingTop="26dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/linearLayout1"
                android:layout_marginRight="60dp"
                android:background="#4C525E"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:paddingTop="26dp" >

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/txtAccumulativePoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điểm tích lũy"
                        android:textColor="#94A4BE"
                        android:textStyle="italic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="#FEFEFE"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" P"
                            android:textColor="#FEFEFE"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/btnDoiDiemLayQua"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/button_doidiem"
                        android:text="Đổi điểm lấy quà"
                        android:textColor="#272E45"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="120dp"
                    android:layout_height="120dp" >

                    <ImageView
                        android:id="@+id/avatarUserView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ava_default"
                        android:scaleType="centerCrop" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/user_ava_fore_ground" />
                </FrameLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout1"
                android:layout_below="@+id/linearLayout1" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="151dp"
                    android:layout_marginTop="8dp"
                    android:background="#00000000"
                    android:src="@drawable/arrow_up" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="34dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="153dp"
                    android:background="#00000000"
                    android:src="@drawable/arrow_down" />

                <ViewSwitcher
                    android:id="@+id/switcherUser"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_above="@+id/imageButton2"
                    android:layout_below="@+id/imageButton1"
                    android:layout_marginLeft="37dp"
                    android:inAnimation="@anim/push_right_in"
                    android:outAnimation="@anim/push_right_out" >

                    <ListView
                        android:id="@+id/lstCollection"
                        android:layout_width="193dp"
                        android:layout_height="match_parent"
                        android:divider="#00000000"
                        android:listSelector="#00000000" >
                    </ListView>

                    <ListView
                        android:id="@+id/lstGift"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="#00000000"
                        android:listSelector="#00000000" >
                    </ListView>
                </ViewSwitcher>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>