<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout_item_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#282e3a" >

    <RelativeLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#282e3a" >

        <TextView
            android:id="@+id/shop_distance"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_gravity="center_horizontal|top"
            android:background="@drawable/shop_distance_green"
            android:gravity="center"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="5 KM"
            android:textColor="#282e3a"
            android:textSize="11dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/shop_score_now_min"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shop_distance"
            android:layout_gravity="center_horizontal|top"
            android:layout_toLeftOf="@+id/shop_cover_layout"
            android:background="@drawable/shop_score_green"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/shop_score_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shop_score_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="#282e3a"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/shop_type_score"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shop_score_now_min"
            android:background="@drawable/shop_type_green"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_type_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/point" />

            <TextView
                android:id="@+id/shop_score"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:layout_below="@+id/shop_score_now_min"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="điểm"
                android:textColor="#ffffff"
                android:textSize="11dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/shop_cover_layout"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_alignBottom="@+id/shop_type_score"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shop_distance" >

            <ImageView
                android:id="@+id/shop_cover"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ava_loading" />

            <LinearLayout
                android:id="@+id/shop_cover_layout_tran"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/shop_avatar_green_tran"
                android:orientation="vertical" >
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/shop_name_content"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/shop_cover_layout"
            android:background="@drawable/shop_content_green"
            android:gravity="center"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_horizontal" >

                <TextView
                    android:id="@+id/shop_name_real"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/shop_type_icon"
                    android:ellipsize="end"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"

                    android:shadowRadius="2"
                    android:maxLines="2"
                    android:text="SHOP NAME"
                    android:textColor="#ffffff"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/shop_type_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/shop_content_real"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:text="Content"
                android:textColor="#282e3a"
                android:textSize="11dp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>