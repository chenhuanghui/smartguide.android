<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutContentFrame2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <RelativeLayout
            android:id="@+id/layoutContentHolder2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout"
            android:background="#282E3A"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" >

            <LinearLayout
                android:id="@+id/LinearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line_repeat"
                android:orientation="horizontal" >
            </LinearLayout>

            <TextView
                android:id="@+id/txtAllFields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="ALL FIELDS"
                android:textColor="#8494B8"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/txtAllFieldsVN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAllFields"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:text="TẤT CẢ CÁC DANH MỤC"
                android:textColor="#4A597A"
                android:textIsSelectable="false"
                android:textSize="8dp"
                android:textStyle="bold"
                android:typeface="normal" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:paddingBottom="30dp" >

                

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/line_repeat"
                    android:orientation="vertical" />

                <TextView
                    android:id="@+id/txtSort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SORT"
                    android:textColor="#8593BA" />

                <TextView
                    android:id="@+id/txtSortVN"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="SẮP XẾP"
                    android:textColor="#4A597A"
                    android:textSize="8dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >
                    
                    <RadioButton
                        android:id="@+id/radioMostPoint"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:checked="true"
                        android:gravity="center_vertical"
                        android:text=" QUAN TÂM NHẤT"
                        android:textColor="#8494B8"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/radioMostLike"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:checked="false"
                        android:text=" ƯA THÍCH NHẤT"
                        android:textColor="#8494B8"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/radioMostView"
                        style="@style/RadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:checked="false"
                        android:text=" XEM NHIỀU NHẤT"
                        android:textColor="#8494B8"
                        android:textSize="14dp" />

                    <RadioButton
                        android:id="@+id/radioDistance"
                        style="@style/RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:checked="false"
                        android:text=" KHOẢNG CÁCH"
                        android:textColor="#8494B8"
                        android:textSize="14dp" />
                </RadioGroup>

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/dummy"
                    android:cropToPadding="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/done" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_above="@+id/linearLayout5"
                android:layout_below="@+id/txtAllFieldsVN"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="wrap_content"
                    android:layout_height="160dp"
                    android:orientation="vertical" >

                    <GridView
                        android:id="@+id/gridCate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:listSelector="#00000000"
                        android:numColumns="2" >
                    </GridView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btnSelectAll"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/button_checknon"
                        android:text="Chọn tất cả"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/btnDeselectAll"
                        android:layout_width="75dp"
                        android:layout_height="20dp"
                        android:background="@drawable/button_checkall"
                        android:text="Bỏ chọn tất cả"
                        android:textColor="#FFFFFF"
                        android:textSize="10dp" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ray_blue_repeat"
            android:orientation="vertical" >
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>