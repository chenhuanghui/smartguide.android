<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#282e3a">
	<RelativeLayout
	    	android:id="@+id/layout_main"
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	    <GridView
              android:id="@+id/grid_view"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:numColumns="3"
              android:listSelector="@android:color/transparent"
              android:horizontalSpacing="0dp"
              android:verticalSpacing="5dp">
	    </GridView>
	</RelativeLayout>
	<RelativeLayout
	    	  android:id="@+id/bgloading" 
	    	  android:layout_width="fill_parent"
	    	  android:layout_height="fill_parent"
	    	  android:background="#BF282e3a"
	    	  android:visibility="invisible">
	    <ImageButton
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:background="@drawable/blur_top_repeat">
        </ImageButton>
        <ImageButton
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/blur_bottom_repeat"
            android:orientation="vertical" />
	</RelativeLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_margin="10dp"
	    android:background="#00000000"
	    android:orientation="vertical" >

	    <ImageView
	        android:id="@+id/loadingBackground"
	        android:layout_width="130dp"
	        android:layout_height="130dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/popup"
	        android:visibility="invisible" />

	    <ImageView
	        android:id="@+id/loadingCircle"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/loading_cirle"
	        android:visibility="invisible" />

	    <ImageView
	        android:id="@+id/loadingMidle"
	        android:layout_width="25dp"
	        android:layout_height="25dp"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:src="@drawable/load_midpoint"
	        android:visibility="invisible" />
	</RelativeLayout>
</RelativeLayout>