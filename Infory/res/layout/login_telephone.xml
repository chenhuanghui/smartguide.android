<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#383735" >

        <!-- <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/button_backarrow" /> -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đăng nhập"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/txtMesTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Nhập số điện thoại của bạn."
        android:textColor="#0F0F0F"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@drawable/button_call"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_numbbox_login"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/txt84"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:contentDescription="@string/sfu_bold"
                android:gravity="center_vertical"
                android:text="(+84)"
                android:textColor="#FD4744"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/edtTelNum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="4dp"
                android:background="#00000000"
                android:contentDescription="@string/sfu_bold"
                android:gravity="center_vertical|left"
                android:imeOptions="actionSend"
                android:inputType="phone"
                android:singleLine="true"
                android:textColor="#FD4744"
                android:textColorHint="#C8C8C8"
                android:textCursorDrawable="@null"
                android:textSize="18sp" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_send" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtMesBot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#0F0F0F"
        android:textSize="12sp" />

</LinearLayout>