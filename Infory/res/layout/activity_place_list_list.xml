<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#383735" >

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/button_backarrow" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/button_search_home"
            android:contentDescription="@string/sfu_normal"
            android:hint="Tìm kiếm địa điểm"
            android:imeOptions="actionSearch"
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textColor="#383735"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
            
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:scaleType="center"
            android:src="@drawable/icon_search" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="52dp"
            android:scaleType="center"
            android:src="@drawable/button_close_search" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/relativeLayout1"
        android:background="#EBEBEB"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ListView
            android:id="@+id/lst"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#EBEBEB"
            android:fadingEdgeLength="12dp"
            android:paddingTop="8dp"
            android:requiresFadingEdge="vertical"
            android:animateLayoutChanges="true" >

        </ListView>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#80000000"
        android:clickable="true"
        android:visibility="invisible" >
            
        <FrameLayout
            android:id="@+id/activityPlacelistLayoutLoadingAni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_loading_big" >
        </FrameLayout>
    </FrameLayout>

</RelativeLayout>