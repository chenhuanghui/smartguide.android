<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
<RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#383735" >

        <ImageButton
            android:id="@+id/btnCancel"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="#00000000"
            android:src="@drawable/button_backarrow" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:background="@drawable/button_search_home"
            android:contentDescription="@string/sfu_normal"
            android:hint="Tìm kiếm địa điểm"
            android:imeOptions="actionSearch"
            android:paddingLeft="32dp"
            android:singleLine="true"
            android:textColor="#383735"
            android:textCursorDrawable="@null"
            android:textSize="14sp" >
            
        </EditText>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:scaleType="center"
            android:src="@drawable/icon_search" />

        <ImageView
            android:id="@+id/btnClearSearch"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="52dp"
            android:scaleType="center"
            android:src="@drawable/button_close_search" />

    </RelativeLayout>
    
<LinearLayout
        android:id="@+id/linearLayoutCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:background="#ffffff"
        android:gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnSelectCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:contentDescription="@string/sfu_heavy"
            android:drawableLeft="@drawable/icon_location"
            android:text=' " Hồ Chí Minh "'
            android:textColor="#5C5B58"
            android:textSize="14sp"
            android:minHeight="30dip" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayoutCity"
        android:background="#EBEBEB"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >

        <ListView
            android:id="@+id/listViewCity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:cacheColorHint="#EBEBEB"
            android:fadingEdgeLength="12dp"
            android:paddingTop="8dp"
            android:requiresFadingEdge="vertical"
            android:animateLayoutChanges="true" >

        </ListView>

    </FrameLayout>
    
    <FrameLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:clickable="true"
        android:visibility="invisible" >
            
        <FrameLayout
            android:id="@+id/activityPlacelistLayoutLoadingAni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_loading_big" >
        </FrameLayout>
    </FrameLayout>
</LinearLayout>
